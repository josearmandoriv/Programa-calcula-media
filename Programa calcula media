#include <stdio.h>
#include <math.h>

int main (void)
{
 int i,n ;
 float suma, aux;
 printf("calculadora de la media");
 printf("ingrese numeros total de datos: ");
 scanf("%d",&n);
 for(i=0;i<n;i++){
 	printf("ingrese el dato %d : ",(i+i));
 	scanf("%f",&aux);
 	suma+=aux; 
 }  
printf("la media es: %g",(suma/n));
return 0;
}
